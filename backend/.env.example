# OfflinePay Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=8080

# MongoDB Database
MONGO_URI=mongodb://localhost:27017/offlinepay

# SMS Service (Twilio) - Primary
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SMS Service (MSG91) - Alternative
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=OFFPAY
MSG91_ROUTE=4
MSG91_COUNTRY_CODE=91

# Hedera Testnet Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=your_hedera_private_key_here
HEDERA_RPC_URL=https://testnet.hashio.io/api
HEDERA_PYUSD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
HEDERA_SBT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Lit Protocol Vincent Configuration
VINCENT_APP_ID=your_vincent_app_id_here
VINCENT_DELEGATEE_PRIVATE_KEY=your_delegatee_private_key_here
VINCENT_ABILITY_AAVE_WITHDRAW_AND_SEND=
VINCENT_ABILITY_AAVE_AUTO_SUPPLY=
VINCENT_ABILITY_NATIVE_SEND=

# Pyth Network Configuration
PYTH_ENTROPY_API_URL=https://fortuna-staging.dourolabs.app
PYTH_INR_USD_FEED_ID=0x...your_price_feed_id

# Transak Off-Ramp Configuration
TRANSAK_API_KEY=your_transak_api_key_here
TRANSAK_PARTNER_ID=your_partner_id_here
TRANSAK_BASE_URL=https://api-stg.transak.com

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
OTP_EXPIRY_SECONDS=300
MAX_FAILED_ATTEMPTS=3

# Arbitrum Sepolia (Optional - for multi-chain support)
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_SEPOLIA_PRIVATE_KEY=
ARBISCAN_API_KEY=

# SBT Minter Address (Backend wallet that mints SBTs)
SBT_MINTER_ADDRESS=0x0000000000000000000000000000000000000000
